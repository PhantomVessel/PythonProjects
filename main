import random

print("This is an Rock paper scicors game")
print("r = rock")
print("p = paper")
print("s = scicors")

values = ["Rock", "Paper", "Scicors"]

game_points_1 = 0
game_points_com = 0

def checkResult(ply, ply_comp):
    print("Player chose ", ply, " Computer chose ", ply_comp)
    for x in values:
        print(x)
    
    

print("How many points to win?")
points = int(input())


while(points > game_points_1 or game_points_com):
    ply = input("What do you chose: ")
    ply_comp = random.choice(values)
    checkResult(ply, ply_comp)




